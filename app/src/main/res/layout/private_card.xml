<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:stateListAnimator="@anim/animation"
    android:id="@+id/privatecard"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/globaliv"
            android:src="@drawable/privatesrc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blobaltv"
            android:layout_toRightOf="@+id/globaliv"
            android:text="Private"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_centerVertical="true"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_toLeftOf="@+id/blobaltv"
            android:foregroundGravity="right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow" />
        <!--selectableItemBackgroundBorderless-->
        <!--android:background="@drawable/custom_ripple_borderless"-->
        <!--android:background="@drawable/custom_ripple_borderless"-->


    </RelativeLayout>

</android.support.v7.widget.CardView>